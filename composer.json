{
	"name": "neayi/mw-neayispecialproperties",
	"description": "MediaWiki extension that encapsulates adding new semantic properties (depends on SemanticExtraSpecialProperties)",
	"type": "mediawiki-extension",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=7.3",
		"composer/installers": "^1.0|^2.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "^39.0|^40.0|^41.0",
		"mediawiki/minus-x": "^1.1",
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"php-parallel-lint/php-console-highlighter": "^0.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
