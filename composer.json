{
	"name": "neayi/mw-neayispecialproperties",
	"type": "mediawiki-extension",
	"description": "MediaWiki extension that adds a semantic special property 'Description' to pages",
	"keywords": [
		"mediawiki",
		"semantic",
		"property",
		"description"
	],
	"homepage": "https://github.com/neayi/mw-NeayiSpecialProperties",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Neayi"
		}
	],
	"require": {
		"php": ">=7.4",
		"composer/installers": "^1.0|^2.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "43.0.0",
		"mediawiki/mediawiki-phan-config": "0.14.0",
		"mediawiki/minus-x": "1.1.3",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0"
	},
	"autoload": {
		"psr-4": {
			"NeayiSpecialProperties\\": "src/"
		}
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
